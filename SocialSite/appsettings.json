{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://[::]:80"
      },
      "Https": {
        "Url": "https://[::]:443"
      }
    },
    "Certificates": {
      "Default": {
        "Path": "/ssl/cert.pfx",
        "Password": "yourpassword",
        "AllowInvalid": true
      }
    }
  }
}
